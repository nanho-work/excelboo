QLineEdit, QTextEdit {
    background-color: #ffffff;
    color: #000000;
    border: 1px solid #ccc;
}

/* Modern Search Box */
QLineEdit {
    padding: 10px 14px;
    border: 2px solid #d0d7de;
    border-radius: 8px;
    font-size: 14px;
    background-color: #f6f8fa;
    color: #24292f;
}
QLineEdit:focus {
    border: 2px solid #1E90FF;
    background-color: #ffffff;
    color: #0f172a;
    outline: none;
}
QLineEdit::placeholder {
    color: #94a3b8;
}